root = true

[*]
charset = utf-8
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{*.yaml,*.json}]
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.ts,*.tsx}]
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
